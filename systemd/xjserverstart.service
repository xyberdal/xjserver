[Unit]
Description=Run XJServer One-Shot Startup Job
After=network-online.target xj-autosetup.service
Requires=xj-autosetup.service

[Service]
Type=oneshot
User=orangepi
WorkingDirectory=/opt/xjserver
ExecStart=/opt/xjserver/venv/bin/python -u /opt/xjserver/startup.py
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
